model JobPreferences {
    id     String @id @default(cuid())
    User   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId String @unique

    // Job Preferences
    keywords String[]
    location String[]
    remote   Boolean?
    jobTypes JobType[]

    // Date & Time
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("job_preferences")
}

// Job Type Enum
enum JobType {
    FULL_TIME
    PART_TIME
    CONTRACT
    INTERNSHIP
}